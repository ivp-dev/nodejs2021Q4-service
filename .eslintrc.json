{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "node/no-missing-import": [
      "error",
      {
        "allowModules": [],
        "resolvePaths": [
          "/src"
        ],
        "tryExtensions": [
          ".js",
          ".json",
          ".ts"
        ]
      }
    ],
    "import/no-unresolved": "off"
  }
}
