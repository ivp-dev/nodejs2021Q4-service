{
  "root": true,
  "env": {
    "node": true,
    "es2020": true,
    "jasmine": true,
    "jest": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "settings": {
    "noInlineConfig": true,
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts",
          ".json"
        ],
        "tryExtensions": [
          ".js",
          ".json",
          ".ts"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "linebreak-style": "off",
    "no-useless-constructor": "off",
    "no-empty-function": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "tsdoc/syntax": "error",
    "@typescript-eslint/no-explicit-any": [
      "error"
    ],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true,
        "variables": true
      }
    ],
    "node/no-missing-import": [
      "error",
      {
        "tryExtensions": [
          ".js",
          ".ts",
          ".json"
        ]
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error"
    ]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-tsdoc"
  ]
}