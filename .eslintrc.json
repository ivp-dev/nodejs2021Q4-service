{
  "root": true,
  "env": {
    "node": true,
    "es2020": true,
    "jasmine": true,
    "jest": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "settings": {
    "noInlineConfig": true,
    "node": {
      "resolvePaths": ["./node_modules", "./src"],
      "tryExtensions": [".js", ".json", ".ts"]
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".json"],
        "tryExtensions": [".js", ".json", ".ts"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "import/extensions": "off",
    "linebreak-style": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "tsdoc/syntax": "error",
    "@typescript-eslint/no-explicit-any": ["error"]
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc", "eslint-plugin-import"]
}
